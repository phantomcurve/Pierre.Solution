@{
  Layout = "_Layout";
}

@model PierreJustCannotHelpHimself.Models.Flavor

<h4>Add a new flavor</h4>
@using (Html.BeginForm())
{
    @Html.Label("Name of new flavor")
    @Html.TextBoxFor(model => model.Name, new { @class = "text", type = "text", required = "required" })
    <br>
    @Html.Label("Treats")
    @Html.DropDownList("TreatId", null, string.Empty)

    <input type="submit" value="Add new flavor" class="btn btn-default" />
}
<p>@Html.ActionLink("Show all flavors", "Index")</p>
@{
  Layout = "_Layout";
}

@model PierreJustCannotHelpHimself.Models.Treat

<h1>Treat Details</h1>
<hr />
<h2>@Html.DisplayNameFor(model => model.Name): @Html.DisplayFor(model => model.Name)<h2>
<ul>

@if (@Model.JoinEntities.Count == 0)
{
  <h3>No flavors have been magicked with this treat yet!</h3>
} 
else
{
  <h3><i>This treat's flavors include</i></h3>
  <ul>
  @foreach (var join in Model.JoinEntities)
  {
    <li>@join.Flavor.Name</li>
    @using (Html.BeginForm("DeleteFlavor", "Treats"))
    {
       @Html.Hidden("joinId", @join.TreatFlavorId)
      <input type="submit" value="Delete" class="btn btn-default" />
    }
  }
  </ul>
}

<p>@Html.ActionLink("Assign an existing flavor to this treat", "AddFlavor", new { id = Model.TreatId })</p>
<hr />
<p>@Html.ActionLink("Edit Treat", "Edit", new { id = Model.TreatId })</p>
<p>@Html.ActionLink("Delete Treat", "Delete", new { id = Model.TreatId })</p>
<p>@Html.ActionLink("Back to Treats", "Index")</p>
@{
  Layout = "_Layout";
}

@using Pierre.Models;
@model List<Pierre.Models.Flavor>;

<h1>Flavors</h1>

@if (@Model.Count == 0)
{
  <h3>No flavors have been added yet!</h3>
} 

<ul>
  @foreach(Flavor flavor in Model)
  {
      <li>@Html.ActionLink($"{flavor.Name}", "Details", new { id = flavor.FlavorId })</li> 
  }
</ul>

<p>@Html.ActionLink("Add new flavor", "Create")</p>
<p>@Html.ActionLink("See all flavors", "Index", "Flavors")</p> 
<p>@Html.ActionLink("See all treats", "Index", "Treats")</p>
<p>@Html.ActionLink("Home", "Index", "Home")</p>


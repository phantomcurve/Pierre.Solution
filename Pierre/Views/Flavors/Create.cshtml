@{
  Layout = "_Layout";
}

@model Pierre.Models.Flavor

<h4>Add a new flavor</h4>
@using (Html.BeginForm())
{
    @Html.Label("Name of new flavor")
    @Html.TextBoxFor(model => model.Name, new { @class = "text", type = "text", required = "required" })
    
    <input type="submit" value="Add new flavor"/>
}
<p>@Html.ActionLink("Show all flavors", "Index")</p>
@{
  Layout = "_Layout";
}

@using Pierre.Models

<h1>Welcome to Pierre's Delectables!</h1> 

<div class="container">
  <div class="row">
    <div class="col-md-6">
      <h3>Pierre's Treats</h3>
      @if (@ViewBag.DelectableDirectory.Count == 0)
      {
        <h4>No treats here yet!</h4>
      }
      @foreach(Treat treat in @ViewBag.DelectableDirectory)
      {
        <li>@treat.Name</li>
      }
    </div>
    <div class="col-md-6">
      <h3>Pierre's Flavors</h3>
      @if (@ViewBag.FlavorDirectory.Count == 0)
      {
        <h4>No flavors here yet!</h4>
      }
      @foreach(Flavor flavor in @ViewBag.FlavorDirectory)
      {
        <li>@flavor.Name</li>
      }
    </div>
  </div>
</div>

<p>@Html.ActionLink("See standalone list of treats", "Index", "Treats")</p>
<p>@Html.ActionLink("See standalone list of flavors", "Index", "Flavors")</p>
